<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.senac.loginwithdatabase.Activity.RegisterActivity"
    android:background="#37B09A">

    <LinearLayout
        android:id="@+id/wrapEdts"
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:paddingTop="20dp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/edtRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:imeActionId="2"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:imeActionId="3"
            android:imeOptions="actionUnspecified"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtConfPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:imeActionId="3"
            android:imeOptions="actionUnspecified"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_login_btn_rounded_corner"
            android:gravity="center_vertical"
            android:text="Create"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
